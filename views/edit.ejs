<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit <%= blog.Title %></div>
        <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method = "POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[Title]" placeholder="title" value="<%= blog.Title %>">
            </div>
            <div class="field">
                <label> Image </label>
                <input type="text" name="blog[Image]" placeholder="type image url" value="<%= blog.Image %>">
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" placeholder="write about your blog"><%= blog.body %></textarea>
                 
            </div>
            <div class="field">
                <input  class="ui black big button" type="submit">
            </div>
             
      </form>
    </div>      
            
            
            
            
     
<% include ./partials/footer %>
<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header"><%= blog.Title%></div>
        <div class="ui top attached segment">
            <div class="item"><p><img class="ui centered rounded image" src="<%= blog.Image %>"></p></div>
            <div class="content"> <span  id="editDate"><%= blog.Created.toDateString() %></span></div>
            <div class="description"><h2>About</h2><%- blog.body %></div>
            <div class="buttonForEdit">
                    <a class="ui purple basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                    <form class="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method= POST >
                       <button class="ui red basic button">Delete</button>
                    </form>
            </div>
        </div>
     </div>      
            
            
            
            
     
